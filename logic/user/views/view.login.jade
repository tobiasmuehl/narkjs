div(layout="row" style="margin-top:15vh" layout-align="space-around center")
	md-whiteframe(flex="33" layout-padding class="md-whiteframe-z3")
		form(ng-submit="login.login(credentials)")
			div(layout="row" layout-align="center center")
			h1(class="md-title" layout-padding) Login
			md-divider
			div(layout-padding layout="column")
				md-input-container(flex)
					label Email
					input(type="email" ng-model="credentials.email")
				md-input-container(flex)
					label Password
					input(type="password" ng-model="credentials.password")
			div(layout-fill layout="row")
				md-button(flex) Login
			a(ui-sref="reset" class="md-subhead" layout-padding) Reset your password
