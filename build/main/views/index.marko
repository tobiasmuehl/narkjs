<!DOCTYPE html>
<html ng-app='app' ng-cloak>
<head>
  <title>App</title>
  <include template='./vendorstyles.marko' />
  <meta name="viewport" content="initial-scale=1">
</head>
<body ng-controller="MainCtrl as main" layout="column">
  <include template="./header.marko" />
  <div ui-view></div>
  <include template='./vendorscripts.marko' />
  <include template='./templates.marko' />
  <!-- import all scripts from public directory -->
  <span if="notEmpty(data.srcs)">
    <script src="$src" for="src in data.srcs"></script>
  </span>
  <browser-refresh enabled="true" />
</body>
</html>
